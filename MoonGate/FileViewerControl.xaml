<Window x:Name="selectFileDialog" x:Class="MoonGate.FileViewerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Files" Height="400.552" Width="758.705" FontFamily="Lucida Sans Unicode">
    <Grid>
        <TreeView x:Name="folderBrowser" Margin="10,10,0,39" Width="251" HorizontalAlignment="Left" Initialized="folderBrowser_Initialized" SelectedItemChanged="folderBrowser_SelectedItemChanged">
            
        </TreeView>
        <Button x:Name="btnOK" Content="Open" HorizontalAlignment="Right" Margin="0,0,90,7" VerticalAlignment="Bottom" Width="75" Height="27" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,7" VerticalAlignment="Bottom" Width="75" HorizontalContentAlignment="Center" IsCancel="True" Height="27"/>
        <Label x:Name="lblPath" Content="" Margin="163,0,10,34" RenderTransformOrigin="-0.053,-0.01" Height="34" VerticalAlignment="Bottom" FontSize="14"/>
        <ListBox x:Name="fileView" Margin="266,10,10,39" />

    </Grid>
</Window>
